" ~/.ideavimrc 

" ------------------------------------
" 导入原生 Vim 配置
" ------------------------------------
source ~/.vimrc

" ------------------------------------
" IdeaVim 专属或覆盖原生配置的设置
" ------------------------------------

" 开启IdeaVim的EasyMotion扩展
set easymotion

" 设置 IdeaVim 的 leader 键
let mapleader = "\<Space>"
