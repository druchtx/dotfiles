{
  "name": "sandbox",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceMount": "",
  "workspaceFolder": "/home/vscode/Workspace",
  "runArgs": [
    "--name",
    "sandbox"
  ],
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": false,
      "installOhMyZshConfig": false
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "postCreateCommand": "cd ~/.dotfiles && ./bin/dot init && ./bin/dot link --force",
  "remoteUser": "vscode",
  "mounts": [
    "source=${localEnv:HOME}/Workspace,target=/home/vscode/Workspace,type=bind,consistency=cached",
    "source=${localEnv:ZSH},target=/home/vscode/.dotfiles,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.claude,target=/home/vscode/.claude,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/gcloud,target=/home/vscode/.config/gcloud,type=bind,consistency=cached"
  ]
}
