# ghostty config
#
# CONFIG_PATH: ~/.config/ghostty/config
#

# theme
theme = github-dark-dimmed
window-theme = dark
font-family = 'Fira Code'
font-size = 13

# window
window-padding-balance = true
window-padding-x = 0
window-padding-y = 0
window-theme = "ghostty"
background-blur-radius = 15
background-opacity = 0.96

mouse-hide-while-typing