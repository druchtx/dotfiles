#!/bin/sh
#
# I literally always forget how to flush my DNS settings on macOS and Linux (in large part
# because it changes every damn update).

os=$(uname -s)
if [ "$os" = "Darwin" ]; then
    sudo killall -HUP mDNSResponder
elif [ "$os" = "Linux" ]; then
    sudo resolvectl flush-caches
else
    echo "Unsupported OS: $os"
    exit 1
fi
